{
  "name": "cryptober",
  "private": true,
  "version": "0.0.0",
  "description": "$cryptober Website – Preflight",
  "license": "MIT",
   "pnpm": {
    "allowedDeprecatedVersions": {
      "eslint": "8",
      "eslint-config-next": "14"
    }
  },
  "engines": {
    "node": ">=20 <23"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "preflight": "node -e \"const v=process.versions.node.split('.') ; const major=+v[0]; if(major<20||major>22){console.error('❌ Node 20–22 required'); process.exit(1)} console.log('✅ Node',process.version)\" && pnpm -v && echo \"✅ pnpm ok\"",
    "prepare": "echo skip corepack on windows",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "pnpm typecheck && pnpm lint && pnpm build"
  },
  "dependencies": {
    "next": "14",
    "react": "18",
    "react-dom": "18",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "20",
    "@types/react": "18",
    "@types/react-dom": "18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.33",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "5"
  }
}
